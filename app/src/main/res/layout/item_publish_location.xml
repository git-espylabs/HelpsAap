<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/bg_rectangle_radius_11"
            app:contentPadding="7dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="State"
                    android:id="@+id/tvLocTitle"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoui"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnPrice1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnPrice2"
                    android:background="@drawable/rounded_rect_green_filled"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="24dp"
                    android:gravity="center"
                    android:text="price1"
                    android:textAllCaps="false"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnPrice2"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocTitle"
                    app:layout_constraintStart_toEndOf="@+id/btnPrice1"
                    app:layout_constraintEnd_toStartOf="@+id/btnPrice3"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="24dp"
                    android:gravity="center"
                    android:text="price1"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnPrice3"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocTitle"
                    app:layout_constraintStart_toEndOf="@+id/btnPrice2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="24dp"
                    android:gravity="center"
                    android:text="price1"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/btnPrice1"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>