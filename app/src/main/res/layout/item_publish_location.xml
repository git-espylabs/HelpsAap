<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.janustech.helpsaap.model.PublishTypeModel" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/bg_rectangle_radius_11"
            app:contentPadding="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvLocTitle"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoui"
                    android:textFontWeight="700"
                    android:text="@{model.publishTypeIdName}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnPrice1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnPrice2"
                    android:background="@drawable/text_bg_selector"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:textColor="@drawable/text_color_selector"
                    android:gravity="center"
                    android:text="@{model.packageList.get(0).packageName}"
                    android:textAllCaps="false"
                    android:maxLines="2"
                    android:lines="2"
                    android:ellipsize="end"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnPrice2"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocTitle"
                    app:layout_constraintStart_toEndOf="@+id/btnPrice1"
                    app:layout_constraintEnd_toStartOf="@+id/btnPrice3"
                    android:background="@drawable/text_bg_selector"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:textColor="@drawable/text_color_selector"
                    android:text="@{model.packageList.get(1).packageName}"
                    android:textAllCaps="false"
                    android:maxLines="2"
                    android:lines="2"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnPrice3"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocTitle"
                    app:layout_constraintStart_toEndOf="@+id/btnPrice2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/text_bg_selector"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:clickable="true"
                    android:textColor="@drawable/text_color_selector"
                    android:text="@{model.packageList.get(2).packageName}"
                    android:textAllCaps="false"
                    android:maxLines="2"
                    android:lines="2"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/btnPrice1"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>