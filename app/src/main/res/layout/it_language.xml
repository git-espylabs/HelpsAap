<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.janustech.helpsaap.model.LanguageDataModel" />
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.janustech.helpsaap.utils.CustomShapebleImageview
            android:id="@+id/ivLang"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:url="@{model.langImage}"
            android:scaleType="fitXY"

            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tvLang"
            app:layout_constraintStart_toEndOf="@id/ivLang"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black"
            android:fontFamily="@font/segoui"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:layout_marginLeft="35dp"
            android:textSize="22sp"
            android:text="@{model.lang}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:targetApi="p" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rd_btn"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:buttonTint="@color/app_accent_color"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

</layout>