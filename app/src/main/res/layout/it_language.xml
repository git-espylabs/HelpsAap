<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.janustech.helpsaap.model.LanguageDataModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.janustech.helpsaap.utils.CustomShapebleImageview
            android:id="@+id/ivLang"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:url="@{model.langImage}"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="128dp"/>

        <TextView
            android:id="@+id/tvLang"
            app:layout_constraintTop_toTopOf="@id/ivLang"
            app:layout_constraintBottom_toBottomOf="@+id/ivLang"
            app:layout_constraintStart_toStartOf="@id/ivLang"
            app:layout_constraintEnd_toEndOf="@id/ivLang"
            android:textColor="@color/white"
            android:fontFamily="@font/segoui"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:textSize="22sp"
            android:text="@{model.lang}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:targetApi="p" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>