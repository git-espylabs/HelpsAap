<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.janustech.helpsaap.model.CompanyDataModel" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/bg_rectangle_radius_11"
            app:contentPadding="7dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.janustech.helpsaap.utils.CustomShapebleImageview
                    android:id="@+id/ivPic"
                    app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                    android:layout_marginVertical="3dp"
                    android:layout_marginHorizontal="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:url="@{model.photo}"
                    android:scaleType="fitXY"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>

                <TextView
                    android:id="@+id/tvCompanyName"
                    app:layout_constraintTop_toTopOf="@+id/ivPic"
                    app:layout_constraintStart_toEndOf="@+id/ivPic"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:text="@{model.businessname}"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textStyle="bold"
                    android:textFontWeight="700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvAddress"
                    app:layout_constraintTop_toBottomOf="@+id/tvCompanyName"
                    app:layout_constraintStart_toStartOf="@+id/tvCompanyName"
                    android:layout_marginTop="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/grey_100"
                    android:fontFamily="@font/segoui"
                    android:textFontWeight="400"
                    android:text="@{model.website}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvLocation"
                    app:layout_constraintTop_toBottomOf="@+id/tvAddress"
                    app:layout_constraintStart_toStartOf="@+id/tvCompanyName"
                    android:layout_marginTop="7dp"
                    android:text="@{model.address}"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoui"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="7dp"
                    android:textFontWeight="700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/ic_share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_phone_call"
                    app:layout_constraintEnd_toStartOf="@+id/ivShare"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivWhatsap"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_whatsapp"
                    app:layout_constraintEnd_toStartOf="@+id/ivCall"
                    app:layout_constraintTop_toBottomOf="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/ivShare"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>