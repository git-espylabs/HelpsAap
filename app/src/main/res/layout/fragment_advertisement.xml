<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.home.AppHomeViewModel"/>

        <variable
            name="viewParent"
            type="com.janustech.helpsaap.ui.home.FragmentAdvertisement" />

        <variable
            name="publishTypesAdapter"
            type="com.janustech.helpsaap.ui.home.PublishTypesAdapter" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                android:fontFamily="@font/segoeui_heavy"
                android:textStyle="bold"
                android:text="Advertisement"
                android:textFontWeight="700"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/dummyV1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <ImageView
                android:id="@+id/ivUpload"
                app:layout_constraintTop_toBottomOf="@+id/dummyV1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_upload"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/promptFileSelect"
                app:layout_constraintTop_toBottomOf="@+id/ivUpload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="36dp"
                android:textColor="@color/app_accent_color"
                android:textSize="16sp"
                android:fontFamily="@font/segoui"
                android:background="@drawable/rounded_rect_plain_filled_green_stroke"
                android:textFontWeight="400"
                android:text="select file to upload"
                android:onClick="@{(view) -> viewParent.onClick(view)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/promptUpload"
                app:layout_constraintTop_toBottomOf="@+id/promptFileSelect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/grey_100"
                android:textSize="16sp"
                android:fontFamily="@font/segoui"
                android:textFontWeight="400"
                android:text="Add Photos Or Posters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/promptUploadRec"
                app:layout_constraintTop_toBottomOf="@+id/promptUpload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:textColor="@color/grey_100"
                android:textSize="12sp"
                android:fontFamily="@font/segoui"
                android:gravity="center"
                android:textFontWeight="200"
                android:text="File Size Recommendation: 300 X 150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/dummyV2"
                app:layout_constraintTop_toBottomOf="@+id/promptUploadRec"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <View
                android:id="@+id/borderV"
                app:layout_constraintTop_toTopOf="@+id/dummyV1"
                app:layout_constraintBottom_toBottomOf="@+id/dummyV2"
                android:background="@drawable/dotted_rect"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                android:fontFamily="@font/segoeui_heavy"
                android:textStyle="bold"
                android:text="Select Publishing Location"
                android:textFontWeight="700"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/borderV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:id="@+id/tilDropdownClub"
                style="@style/EspyEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:theme="@style/EspyAutoCompleteStyle"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconTint="@color/app_accent_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="200dp"
                android:background="@drawable/rounded_rect_plain_filled_green_stroke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPublishLocations">

                <AutoCompleteTextView
                    android:id="@+id/tvDropdownClub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:paddingHorizontal="8dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:dropDownHeight="300dp"
                    android:inputType="none"
                    android:paddingVertical="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoui"
                    android:textSize="@dimen/text_size_custom_18"
                    app:backgroundTint="@android:color/transparent"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvPublishLocations"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                android:fontFamily="@font/segoui"
                android:textStyle="bold"
                android:text="Publishing Location"
                android:textFontWeight="700"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/borderV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:paddingHorizontal="8dp"
                android:id="@+id/actLocation"
                app:layout_constraintTop_toBottomOf="@+id/tvPublishLocations"
                android:background="@drawable/rounded_rect_grey_filled"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="7dp"
                android:layout_marginTop="8dp"
                android:hint="Post Publishing Location"
                android:layout_width="match_parent"
                android:layout_height="41dp"/>

            <ImageView
                android:id="@+id/ivClearSearch"
                app:layout_constraintTop_toTopOf="@+id/actLocation"
                app:layout_constraintBottom_toBottomOf="@+id/actLocation"
                app:layout_constraintEnd_toEndOf="@+id/actLocation"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_close_24"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPublishTypes"
                tools:listitem="@layout/item_publish_location"
                android:adapter="@{publishTypesAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/actLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnPost"
                app:layout_constraintTop_toBottomOf="@+id/rvPublishTypes"
                style="@style/HelpAapButtonStyle"
                android:layout_marginTop="24dp"
                android:text="Continue to Payment"
                android:textAllCaps="false"
                android:onClick="@{(view) -> viewParent.onClick(view)}"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

            <View
                app:layout_constraintTop_toBottomOf="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="36dp"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>