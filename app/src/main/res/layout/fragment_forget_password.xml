<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.profile.ProfileViewModel"/>

        <variable
            name="viewParent"
            type="com.janustech.helpsaap.ui.profile.ForgotPasswordFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_lock_128"
            app:layout_constraintVertical_bias="0.1"
            android:layout_width="96dp"
            android:layout_height="96dp"/>

        <TextView
            android:id="@+id/tvHeader"
            app:layout_constraintTop_toBottomOf="@+id/ivHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Forgot Password?"
            android:fontFamily="@font/segoeui_heavy"
            android:textColor="@color/app_accent_color"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:textColor="@color/grey_100"
            android:fontFamily="@font/segoui"
            android:text="@string/forgot_pass_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etUserNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@drawable/rounded_rect_grey_filled"
                android:drawableStart="@drawable/ic_email_24"
                android:drawablePadding="4dp"
                android:fontFamily="@font/segoui"
                android:hint="Registered Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:text="@={viewModel.fgtPasEmail}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/btnSendOtp"
            app:layout_constraintTop_toBottomOf="@+id/etUserNameLayout"
            app:layout_constraintStart_toStartOf="@+id/etUserNameLayout"
            app:layout_constraintEnd_toEndOf="@+id/etUserNameLayout"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/segoeui_heavy"
            android:textSize="@dimen/text_size_custom_18"
            android:textColor="@color/app_accent_color"
            android:text="Send OTP"
            android:onClick="@{() -> viewModel.processRequestSendOtp()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvPromptOtpEnter"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoui"
            android:text="Enter the OTP send to"
            app:layout_constraintTop_toBottomOf="@+id/btnSendOtp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.chaos.view.PinView
            android:id="@+id/otp_iew"
            style="@style/PinWidget.PinView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPromptOtpEnter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="@color/app_accent_color"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="false"
            app:itemCount="6"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="0dp"
            app:itemWidth="48dp"
            app:lineColor="@color/app_accent_color"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitOtp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/otp_iew"
            app:layout_constraintStart_toStartOf="@+id/otp_iew"
            app:layout_constraintEnd_toEndOf="@+id/otp_iew"
            android:textSize="16sp"
            android:fontFamily="@font/segoeui_heavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="24dp"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            android:text="Verify" />

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="btnSubmitOtp,tvPromptOtpEnter,otp_iew"
            android:id="@+id/groupOtp" />

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btnSendOtp,etUserNameLayout, tvDesc"
            android:id="@+id/groupEmail" />

        <TextView
            android:id="@+id/tvPromptResetPass"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoeui_heavy"
            android:text="Reset Your HelpsAap Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etNewPasswordLayout"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:layout_constraintTop_toBottomOf="@+id/tvPromptResetPass"
            android:layout_marginHorizontal="24dp"
            app:passwordToggleEnabled="true"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:fontFamily="@font/segoui"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                android:layout_height="@dimen/custom_dimen_48"
                android:maxLength="6"
                android:background="@drawable/rounded_rect_grey_filled"
                android:hint="New Password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etConfmNewPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:layout_constraintTop_toBottomOf="@+id/etNewPasswordLayout"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfmNewPassword"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:fontFamily="@font/segoui"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                android:layout_height="@dimen/custom_dimen_48"
                android:maxLength="6"
                android:background="@drawable/rounded_rect_grey_filled"
                android:hint="Confirm New Password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnResetPass"
            style="@style/HelpAapButtonStyle"
            app:layout_constraintTop_toBottomOf="@+id/etConfmNewPasswordLayout"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dimen_56"/>

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btnResetPass,etNewPasswordLayout,etConfmNewPasswordLayout,tvPromptResetPass"
            android:id="@+id/groupResetPass" />

        <TextView
            android:id="@+id/tvSuccessChange"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoui"
            android:text="Your HelpsAap Password changed\nsuccessfully"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/btnContinueLogin"
            app:layout_constraintTop_toBottomOf="@+id/tvSuccessChange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/segoui"
            android:textSize="24sp"
            android:background="@drawable/rounded_rect_plain_filled_green_stroke"
            android:textColor="@color/app_accent_color"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            android:text="Continue to Login"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btnContinueLogin,tvSuccessChange"
            android:id="@+id/groupLogin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>