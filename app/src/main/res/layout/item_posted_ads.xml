<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.janustech.helpsaap.model.PostedAdDataModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.janustech.helpsaap.utils.CustomShapebleImageview
            android:id="@+id/ivLang"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:url="@{model.ads_image}"
            tools:src="@drawable/bg_profile_home_title"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="128dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ivLang"
            app:layout_constraintStart_toStartOf="@id/ivLang"
            app:layout_constraintEnd_toEndOf="@id/ivLang"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/app_accent_color"
            android:fontFamily="@font/segoui"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:textSize="18sp"
            tools:text="10 May 2022 to 10 Aug 2022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tvPublishType"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="@id/ivLang"
            app:layout_constraintEnd_toEndOf="@id/ivLang"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/black"
            android:fontFamily="@font/segoui"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:textSize="18sp"
            tools:text="Publish Location: State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:targetApi="p" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/tvPublishType"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>