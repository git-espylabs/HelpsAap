<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.home.AppHomeViewModel"/>

        <variable
            name="catListAdapter"
            type="com.janustech.helpsaap.ui.home.CategoryListAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEditPrompt"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_custom_18"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textStyle="bold"
                    android:text="Edit Profile"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.janustech.helpsaap.utils.CustomCircleImageview
                    android:id="@+id/ivLogo"
                    app:layout_constraintTop_toBottomOf="@+id/tvEditPrompt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintVertical_bias="0.02"
                    android:layout_width="128dp"
                    android:layout_height="128dp"/>
                <TextView
                    android:id="@+id/editLocation"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo"
                    android:text="Edit your Location"
                    android:textColor="@color/app_accent_color"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textSize="@dimen/text_size_custom_18"
                    android:layout_marginHorizontal="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvPromptAddCategs"
                    android:textColor="@color/app_accent_color"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textStyle="bold"
                    android:text="@string/add_categories"
                    android:textFontWeight="700"
                    android:layout_marginTop="32dp"
                    android:drawableStart="@drawable/ic_add_24"
                    android:drawableTint="@color/app_accent_color"
                    app:layout_constraintTop_toBottomOf="@+id/editLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/promtOffer"
                    android:textColor="@color/app_accent_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textStyle="bold"
                    android:textFontWeight="700"
                    android:drawableTint="@color/app_accent_color"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toTopOf="@+id/tvPromptAddCategs"
                    app:layout_constraintStart_toEndOf="@+id/tvPromptAddCategs"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etUserNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    app:layout_constraintTop_toBottomOf="@+id/tvPromptAddCategs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="Username"
                        android:imeOptions="actionNext"
                        android:text="@={viewModel.editUsername}"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:id="@+id/etEmailLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    android:background="@drawable/rounded_rect_grey_filled"
                    app:layout_constraintTop_toBottomOf="@+id/etUserNameLayout"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="@string/text_hint_email"
                        android:inputType="textEmailAddress"
                        android:text="@={viewModel.editEmail}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etMobLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    app:layout_constraintTop_toBottomOf="@+id/etEmailLay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:enabled="false"
                        android:id="@+id/etMobNo"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="@string/text_hint_mob"
                        android:inputType="none"
                        android:text="@={viewModel.editEditMob}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:id="@+id/etBusiessNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    app:layout_constraintTop_toBottomOf="@+id/etMobLayout"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:layout_marginTop="16dp"
                    app:hintAnimationEnabled="false"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBusinessName"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="Business Name"
                        android:inputType="text"
                        android:text="@={viewModel.edtBusinessName}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:id="@+id/etwhatsappLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    app:layout_constraintTop_toBottomOf="@+id/etBusiessNameLayout"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:layout_marginTop="16dp"
                    app:hintAnimationEnabled="false"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWhatsapp"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="Whatsapp"
                        android:inputType="number"
                        android:text="@={viewModel.edtWhatsapp}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:id="@+id/etwebsiteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    app:layout_constraintTop_toBottomOf="@+id/etwhatsappLayout"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:layout_marginTop="16dp"
                    app:hintAnimationEnabled="false"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWebsite"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="Website"
                        android:inputType="text"
                        android:text="@={viewModel.edtWebsite}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="visible"
                    android:id="@+id/etareaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    app:layout_constraintTop_toBottomOf="@+id/etwebsiteLayout"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:layout_marginTop="16dp"
                    app:hintAnimationEnabled="false"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etArea"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="Area Name"
                        android:inputType="text"
                        android:text="@={viewModel.edtAreaName}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/etofferpercentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none"
                    app:layout_constraintTop_toBottomOf="@+id/etareaLayout"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:layout_marginTop="16dp"
                    app:hintAnimationEnabled="false"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOfferPer"
                        android:layout_width="match_parent"
                        android:padding="1dp"
                        android:fontFamily="@font/segoui"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_custom_18"
                        android:layout_height="@dimen/custom_dimen_48"
                        android:hint="Offer Percentage"
                        android:inputType="number"
                        android:text="@={viewModel.editOfferPercent}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnContinue"
                    style="@style/HelpAapButtonStyle"
                    app:layout_constraintTop_toBottomOf="@+id/etofferpercentLayout"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:text="Save"
                    android:paddingHorizontal="24dp"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/custom_dimen_56"
                    android:layout_marginBottom="24dp"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/tvPrivacy"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnContinue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/avenir_medium_oblique"
                    android:text="@string/prompt_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/tvPromptTnc"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrivacy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/avenir_medium_oblique"
                    android:text="@string/prompt_tnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/tvPromptTnc"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/tvRefund"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPromptTnc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/avenir_medium_oblique"
                    android:text="@string/refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/tvRefund"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>