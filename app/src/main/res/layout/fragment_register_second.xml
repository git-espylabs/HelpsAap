<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.profile.ProfileViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/app_logo"
            app:layout_constraintVertical_bias="0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <ScrollView
            app:layout_constraintTop_toBottomOf="@+id/ivLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/dummyV1"
                    android:layout_marginTop="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <ImageView
                    android:id="@+id/ivUpload"
                    app:layout_constraintTop_toBottomOf="@+id/dummyV1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_upload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

                <TextView
                    android:id="@+id/promptFileSelect"
                    app:layout_constraintTop_toBottomOf="@+id/ivUpload"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/app_accent_color"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="48dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoui"
                    android:background="@drawable/rounded_rect_plain_filled_green_stroke"
                    android:textFontWeight="400"
                    android:text="select file to upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/promptUpload"
                    app:layout_constraintTop_toBottomOf="@+id/promptFileSelect"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/grey_100"
                    android:textSize="12sp"
                    android:fontFamily="@font/segoui"
                    android:textFontWeight="400"
                    android:text="add photo or business Logo/Visiting Card Etc..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/dummyV2"
                    app:layout_constraintTop_toBottomOf="@+id/promptUpload"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <View
                    android:id="@+id/borderV"
                    app:layout_constraintTop_toTopOf="@+id/dummyV1"
                    app:layout_constraintBottom_toBottomOf="@+id/dummyV2"
                    android:background="@drawable/dotted_rect"
                    android:layout_marginHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <AutoCompleteTextView
                    android:paddingHorizontal="5dp"
                    android:id="@+id/categorySpinner"
                    app:layout_constraintTop_toBottomOf="@+id/borderV"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/rounded_rect_grey_filled"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="7dp"
                    android:layout_marginTop="28dp"
                    android:hint="Search Category"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"/>

                <ImageView
                    android:id="@+id/ivClearSearch"
                    app:layout_constraintTop_toTopOf="@+id/categorySpinner"
                    app:layout_constraintBottom_toBottomOf="@+id/categorySpinner"
                    app:layout_constraintEnd_toEndOf="@+id/categorySpinner"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_close_24"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/promptAddCategory"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/categorySpinner"
                    app:layout_constraintEnd_toEndOf="@+id/categorySpinner"
                    android:text="+ Add New Category"
                    android:textSize="14sp"
                    android:textColor="@color/app_accent_color"
                    android:fontFamily="@font/segoui"
                    android:textFontWeight="400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvTitleMemshp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/promptAddCategory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/segoui"
                    android:textFontWeight="400"
                    android:background="@drawable/top_rounded_rect_green_filled"
                    android:text="HelpsAap Membership"
                    android:paddingVertical="7dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                    android:id="@+id/dummyV3"
                    android:background="@color/light_green"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleMemshp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>

                <TextView
                    android:id="@+id/tvAmtMemshp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleMemshp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textFontWeight="700"
                    android:text="Just â‚¹ 99 ( 1 Years)"
                    android:textStyle="bold"
                    android:paddingVertical="7dp"
                    android:paddingLeft="36dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/borderV2"
                    app:layout_constraintTop_toTopOf="@+id/tvTitleMemshp"
                    app:layout_constraintBottom_toBottomOf="@+id/dummyV3"
                    android:background="@drawable/rounded_rect_plain_filled_green_stroke"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/tvPromptPayMethod"
                    app:layout_constraintTop_toBottomOf="@+id/borderV2"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Payment Method"
                    android:fontFamily="@font/segoeui_heavy"
                    android:textFontWeight="700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/payCard"
                    android:layout_marginTop="12dp"
                    android:elevation="8dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPromptPayMethod"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="@dimen/bg_rectangle_radius_11"
                    app:contentPaddingLeft="16dp"
                    app:contentPaddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivPayMethod"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/ico_mastercard"
                            android:layout_width="72dp"
                            android:layout_height="72dp"/>

                        <TextView
                            android:id="@+id/tvTitlePayMethod"
                            app:layout_constraintTop_toTopOf="@+id/ivPayMethod"
                            app:layout_constraintBottom_toTopOf="@+id/tvDescPayMethod"
                            app:layout_constraintStart_toEndOf="@+id/ivPayMethod"
                            android:layout_marginLeft="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/segoeui_heavy"
                            android:textStyle="bold"
                            android:text="Master Card"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvDescPayMethod"
                            app:layout_constraintTop_toBottomOf="@+id/tvTitlePayMethod"
                            app:layout_constraintBottom_toBottomOf="@+id/ivPayMethod"
                            app:layout_constraintStart_toEndOf="@+id/ivPayMethod"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:textColor="@color/grey_100"
                            android:fontFamily="@font/segoui"
                            android:text="Payment to transferred a money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            app:layout_constraintTop_toTopOf="@+id/ivPayMethod"
                            app:layout_constraintBottom_toBottomOf="@+id/ivPayMethod"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnFinish"
                    style="@style/HelpAapButtonStyle"
                    app:layout_constraintTop_toBottomOf="@+id/payCard"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:text="Finish"
                    android:paddingHorizontal="24dp"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/custom_dimen_56"
                    android:layout_marginBottom="24dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>