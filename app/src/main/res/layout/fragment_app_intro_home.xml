<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.startup.AppIntroViewModel"/>

        <variable
            name="dOdAdapter"
            type="com.janustech.helpsaap.ui.startup.DealOfDayAdapter" />

        <variable
            name="adsListAdapter"
            type="com.janustech.helpsaap.ui.startup.AdsListAdapter" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@={viewModel.userLocationName}"
                android:textFontWeight="200"
                android:fontFamily="@font/segoui"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="7dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@+id/btnLogin"
                app:layout_constraintTop_toTopOf="@+id/btnLogin"
                app:layout_constraintBottom_toBottomOf="@+id/btnLogin"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:layout_marginTop="8dp"
                android:id="@+id/btnLogin"
                app:layout_constraintStart_toEndOf="@+id/tvLocation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/HelpAapButtonStyle"
                android:text="@string/text_login"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:paddingHorizontal="5dp"
                android:id="@+id/actSearch"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin"
                android:background="@drawable/rounded_rect_grey_filled"
                android:drawableEnd="@drawable/ic_search"
                android:layout_marginTop="28dp"
                android:hint="Search"
                android:layout_width="match_parent"
                android:layout_height="52dp"/>

            <TextView
                android:id="@+id/tvPromptRegister"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/actSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:textColor="@color/app_accent_color"
                android:textStyle="bold"
                android:fontFamily="@font/segoui"
                android:textFontWeight="700"
                android:text="Make your HelpsApp Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_marginTop="4dp"
                style="@style/HelpAapButtonStyle"
                app:layout_constraintTop_toBottomOf="@+id/tvPromptRegister"
                app:layout_constraintStart_toStartOf="@+id/tvPromptRegister"
                app:layout_constraintEnd_toEndOf="@+id/tvPromptRegister"
                android:text="Register Now"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPromptDeals"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/btnRegister"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/segoui"
                android:textFontWeight="500"
                android:text="Deals for the Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDealOfDay"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPromptDeals"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:adapter="@{dOdAdapter}"
                tools:listitem="@layout/item_deal_of_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPromptAds"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/rvDealOfDay"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/segoui"
                android:textFontWeight="500"
                android:text="Advertisement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAds"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPromptAds"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:adapter="@{adsListAdapter}"
                tools:listitem="@layout/item_deal_of_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                app:layout_constraintTop_toBottomOf="@+id/rvAds"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>