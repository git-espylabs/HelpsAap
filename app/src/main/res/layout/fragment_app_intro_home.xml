<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.startup.AppIntroViewModel"/>

        <variable
            name="dOdAdapter"
            type="com.janustech.helpsaap.ui.startup.DealOfDayAdapter" />

        <variable
            name="adsListAdapter"
            type="com.janustech.helpsaap.ui.startup.AdsListAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/helplineLay"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:text="@={viewModel.userLocationName}"
                android:textFontWeight="200"
                android:fontFamily="@font/segoeui_heavy"
                app:drawableStartCompat="@drawable/ic_location"
                app:drawableEndCompat="@drawable/ic_arrow_down"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintVertical_bias="0.25"
                app:layout_constraintTop_toTopOf="@+id/btnLogin"
                app:layout_constraintBottom_toBottomOf="@+id/btnLogin"
                app:layout_constraintStart_toStartOf="parent"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@+id/btnLogin"
                tools:targetApi="p" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/btnLogin"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/text_login"
                android:textSize="16sp"
                android:textColor="@color/app_accent_color"
                android:fontFamily="@font/segoeui_heavy"
                android:textStyle="bold"
                android:textFontWeight="700"
                android:drawablePadding="7dp"
                android:drawableEnd="@drawable/ic_login_24"
                android:paddingVertical="6dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/btnProfileIco"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@={viewModel.userNameIc}"
                android:textSize="18sp"
                android:background="@drawable/circle_bg"
                android:textColor="@color/white"
                android:fontFamily="@font/segoui"
                android:textStyle="bold"
                android:textFontWeight="700"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:paddingHorizontal="5dp"
                android:id="@+id/actSearch"
                app:layout_constraintTop_toBottomOf="@+id/tvLocation"
                android:background="@drawable/rounded_rect_grey_filled"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="7dp"
                android:layout_marginTop="28dp"
                android:hint="Search Category"
                android:layout_width="match_parent"
                android:layout_height="52dp"/>

            <ImageView
                android:id="@+id/ivClearSearch"
                app:layout_constraintTop_toTopOf="@+id/actSearch"
                app:layout_constraintBottom_toBottomOf="@+id/actSearch"
                app:layout_constraintEnd_toEndOf="@+id/actSearch"
                android:layout_marginRight="3dp"
                android:src="@drawable/ic_close_24"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"/>

            <TextView
                android:id="@+id/tvPromptRegister"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/actSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:textColor="@color/app_accent_color"
                android:textStyle="bold"
                android:fontFamily="@font/segoeui_heavy"
                android:textFontWeight="700"
                android:text="Make your HelpsApp Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_marginTop="12dp"
                style="@style/HelpAapButtonStyle"
                app:layout_constraintTop_toBottomOf="@+id/tvPromptRegister"
                app:layout_constraintStart_toStartOf="@+id/tvPromptRegister"
                app:layout_constraintEnd_toEndOf="@+id/tvPromptRegister"
                android:text="Register Now"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnProfile"
                style="@style/HelpAapButtonStyle"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/actSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="My Profile"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ScrollView
                app:layout_constraintTop_toBottomOf="@+id/btnRegister"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvPromptDeals"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/segoeui_heavy"
                        android:textFontWeight="500"
                        android:text="Deals for the Day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/rvDealOfDay"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPromptDeals"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvPromptAds"
                        android:layout_marginTop="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvDealOfDay"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/segoeui_heavy"
                        android:textFontWeight="500"
                        android:text="Advertisement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/rvAds"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPromptAds"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        app:layout_constraintTop_toBottomOf="@+id/rvAds"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tvPromptRegister,btnRegister"
                android:id="@+id/groupSignupPrompt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            app:layout_constraintTop_toTopOf="@+id/helpline"
            app:layout_constraintBottom_toBottomOf="@+id/helpline"
            android:background="@color/grey_10"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/helpline"
            android:paddingVertical="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/helpCall"
            android:letterSpacing="0.1"
            android:text="HelpLine: 9207777133"
            android:fontFamily="@font/dincond_bold_opentype"
            android:textColor="@color/app_accent_color"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/helpCall"
            app:layout_constraintTop_toTopOf="@+id/helpline"
            app:layout_constraintBottom_toBottomOf="@+id/helpline"
            app:layout_constraintStart_toEndOf="@+id/helpline"
            app:layout_constraintEnd_toStartOf="@+id/helpWhatsap"
            android:layout_marginLeft="9dp"
            android:src="@drawable/ic_phone_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/helpWhatsap"
            app:layout_constraintTop_toTopOf="@+id/helpline"
            app:layout_constraintBottom_toBottomOf="@+id/helpline"
            app:layout_constraintStart_toEndOf="@+id/helpCall"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="9dp"
            android:src="@drawable/ic_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/helplineLay"
            app:layout_constraintTop_toTopOf="@+id/helpline"
            app:layout_constraintBottom_toBottomOf="@+id/helpline"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>