<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.home.AppHomeViewModel"/>

        <variable
            name="locListAdapter"
            type="com.janustech.helpsaap.ui.home.LocationListAdapter" />

        <variable
            name="viewParent"
            type="com.janustech.helpsaap.ui.home.FragmentDealOfDay" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_custom_18"
                android:fontFamily="@font/segoeui_heavy"
                android:textStyle="bold"
                android:text="Deals for the Day"
                android:textFontWeight="700"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_marginTop="36dp"
                android:hint="Start Date"
                android:gravity="center|left"
                android:paddingHorizontal="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoui"
                android:textFontWeight="700"
                android:text="@={viewModel.selectedFromDealDateTv}"
                android:onClick="@{(view) -> viewParent.onClick(view)}"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:background="@drawable/rounded_rect_grey_filled"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

            <ImageView
                android:id="@+id/ivStartDate"
                android:src="@drawable/ic_calendar"
                app:layout_constraintTop_toTopOf="@+id/tvStartDate"
                app:layout_constraintBottom_toBottomOf="@+id/tvStartDate"
                app:layout_constraintStart_toStartOf="@+id/tvStartDate"
                app:layout_constraintEnd_toEndOf="@+id/tvStartDate"
                app:layout_constraintHorizontal_bias="0.97"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_marginTop="24dp"
                android:hint="End Date"
                android:gravity="center|left"
                android:paddingHorizontal="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoui"
                android:visibility="gone"
                android:textFontWeight="700"
                android:text="@={viewModel.selectedToDealDateTv}"
                android:onClick="@{(view) -> viewParent.onClick(view)}"
                app:layout_constraintTop_toBottomOf="@+id/ivStartDate"
                android:background="@drawable/rounded_rect_grey_filled"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

            <ImageView
                android:id="@+id/ivEndDate"
                android:src="@drawable/ic_calendar"
                app:layout_constraintTop_toTopOf="@+id/tvEndDate"
                app:layout_constraintBottom_toBottomOf="@+id/tvEndDate"
                app:layout_constraintStart_toStartOf="@+id/tvEndDate"
                app:layout_constraintEnd_toEndOf="@+id/tvEndDate"
                app:layout_constraintHorizontal_bias="0.97"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDateInstrctn"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvEndDate"
                app:layout_constraintEnd_toEndOf="@+id/tvEndDate"
                android:textSize="14sp"
                android:textColor="@color/app_accent_color"
                android:fontFamily="@font/segoui"
                android:text="*Minimum 7 Days"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/dummyV1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvStartDate"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <ImageView
                android:id="@+id/ivUpload"
                app:layout_constraintTop_toBottomOf="@+id/dummyV1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_upload"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/promptFileSelect"
                app:layout_constraintTop_toBottomOf="@+id/ivUpload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="36dp"
                android:textColor="@color/app_accent_color"
                android:textSize="16sp"
                android:fontFamily="@font/segoui"
                android:background="@drawable/rounded_rect_plain_filled_green_stroke"
                android:textFontWeight="400"
                android:text="select file to upload"
                android:onClick="@{(view) -> viewParent.onClick(view)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/promptUpload"
                app:layout_constraintTop_toBottomOf="@+id/promptFileSelect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:textColor="@color/grey_100"
                android:textSize="16sp"
                android:fontFamily="@font/segoui"
                android:gravity="center"
                android:textFontWeight="400"
                android:text="Add Photos Or Posters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/promptUploadRec"
                app:layout_constraintTop_toBottomOf="@+id/promptUpload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:textColor="@color/grey_100"
                android:textSize="12sp"
                android:fontFamily="@font/segoui"
                android:gravity="center"
                android:textFontWeight="200"
                android:text="File Size Recommendation: 300 X 150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/dummyV2"
                app:layout_constraintTop_toBottomOf="@+id/promptUploadRec"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <View
                android:id="@+id/borderV"
                app:layout_constraintTop_toTopOf="@+id/dummyV1"
                app:layout_constraintBottom_toBottomOf="@+id/dummyV2"
                android:background="@drawable/dotted_rect"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <AutoCompleteTextView
                android:paddingHorizontal="8dp"
                android:id="@+id/actLocation"
                app:layout_constraintTop_toBottomOf="@+id/borderV"
                android:background="@drawable/rounded_rect_grey_filled"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="7dp"
                android:layout_marginTop="36dp"
                android:hint="Post Publishing Location"
                android:layout_width="match_parent"
                android:layout_height="52dp"/>

            <ImageView
                android:id="@+id/ivClearSearch"
                app:layout_constraintTop_toTopOf="@+id/actLocation"
                app:layout_constraintBottom_toBottomOf="@+id/actLocation"
                app:layout_constraintEnd_toEndOf="@+id/actLocation"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_close_24"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLocation"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/actLocation"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:adapter="@{locListAdapter}"
                tools:listitem="@layout/item_location_list"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnPost"
                app:layout_constraintTop_toBottomOf="@+id/rvLocation"
                style="@style/HelpAapButtonStyle"
                android:layout_marginTop="36dp"
                android:text="Post"
                android:onClick="@{(view) -> viewParent.onClick(view)}"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

            <View
                app:layout_constraintTop_toBottomOf="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="36dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>