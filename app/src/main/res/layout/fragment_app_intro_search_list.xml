<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data >
        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.startup.AppIntroViewModel"/>

        <variable
            name="cmpnyAdapter"
            type="com.janustech.helpsaap.ui.startup.CompanyListAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/app_accent_color"
            android:text="@={viewModel.userLocationName}"
            android:textFontWeight="200"
            android:fontFamily="@font/segoeui_heavy"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintTop_toTopOf="@+id/btnLogin"
            app:layout_constraintBottom_toBottomOf="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/btnLogin"
            tools:targetApi="p" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/btnLogin"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/text_login"
            android:textSize="16sp"
            android:textColor="@color/app_accent_color"
            android:fontFamily="@font/segoeui_heavy"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:drawablePadding="7dp"
            android:drawableEnd="@drawable/ic_login_24"
            android:paddingVertical="6dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/btnProfileIco"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@={viewModel.userNameIc}"
            android:textSize="18sp"
            android:background="@drawable/circle_bg"
            android:textColor="@color/white"
            android:fontFamily="@font/segoui"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPromptCompnyList"
            app:layout_constraintTop_toBottomOf="@+id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:text="@={viewModel.userSelectedCategoryName}"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_custom_18"
            android:textFontWeight="700"
            android:fontFamily="@font/segoeui_heavy"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCompanies"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPromptCompnyList"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_company_list"
            android:adapter="@{cmpnyAdapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>