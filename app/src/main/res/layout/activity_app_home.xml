<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewParent"
            type="com.janustech.helpsaap.ui.home.AppHomeActivity" />

        <variable
            name="viewModel"
            type="com.janustech.helpsaap.ui.home.AppHomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.LoginActivity">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@={viewModel.userLocationName}"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            android:textFontWeight="200"
            android:fontFamily="@font/segoeui_heavy"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            android:drawablePadding="7dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintEnd_toStartOf="@+id/btnProfileIco"
            app:layout_constraintTop_toTopOf="@+id/btnProfileIco"
            app:layout_constraintBottom_toBottomOf="@+id/btnProfileIco"
            app:layout_constraintStart_toStartOf="parent"
            android:singleLine="true"
            android:ellipsize="end"
            tools:targetApi="p" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/btnProfileIco"
            app:layout_constraintStart_toEndOf="@+id/tvLocation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@={viewModel.userNameIc}"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            android:textSize="18sp"
            android:background="@drawable/circle_bg"
            android:textColor="@color/white"
            android:fontFamily="@font/segoui"
            android:textStyle="bold"
            android:textFontWeight="700"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.fragment.app.FragmentContainerView
            app:navGraph="@navigation/app_home_nav_graph"
            android:id="@+id/fragmentContainerView"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:defaultNavHost="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnProfileIco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btm_bar_bg"/>


        <View
            android:id="@+id/btm_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintStart_toStartOf="@+id/btm_bar_bg"
            app:layout_constraintTop_toTopOf="@+id/btm_bar_bg"
            app:layout_constraintBottom_toBottomOf="@+id/btm_bar_bg">

            <ImageView
                android:id="@+id/btnHome"
                android:src="@drawable/ic_home"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            app:layout_constraintEnd_toStartOf="@+id/l3"
            app:layout_constraintStart_toEndOf="@+id/l1"
            app:layout_constraintTop_toTopOf="@+id/btm_bar_bg"
            app:layout_constraintBottom_toBottomOf="@+id/btm_bar_bg">

            <ImageView
                android:id="@+id/btnDeal"
                android:src="@drawable/ic_deal"
                android:layout_width="23dp"
                android:layout_height="23dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            app:layout_constraintEnd_toStartOf="@+id/l4"
            app:layout_constraintStart_toEndOf="@+id/l2"
            app:layout_constraintTop_toTopOf="@+id/btm_bar_bg"
            app:layout_constraintBottom_toBottomOf="@+id/btm_bar_bg">

            <ImageView
                android:id="@+id/btnAds"
                android:src="@drawable/ic_advert"
                android:layout_width="23dp"
                android:layout_height="23dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            app:layout_constraintEnd_toStartOf="@+id/l5"
            app:layout_constraintStart_toEndOf="@+id/l3"
            app:layout_constraintTop_toTopOf="@+id/btm_bar_bg"
            app:layout_constraintBottom_toBottomOf="@+id/btm_bar_bg">

            <ImageView
                android:id="@+id/btnNotification"
                android:src="@drawable/ic_bell"
                android:layout_width="23dp"
                android:layout_height="23dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="@{(view) -> viewParent.onClick(view)}"
            app:layout_constraintEnd_toEndOf="@+id/btm_bar_bg"
            app:layout_constraintStart_toEndOf="@+id/l4"
            app:layout_constraintTop_toTopOf="@+id/btm_bar_bg"
            app:layout_constraintBottom_toBottomOf="@+id/btm_bar_bg">

            <ImageView
                android:id="@+id/btnProfile"
                android:src="@drawable/ic_setting"
                android:layout_width="23dp"
                android:layout_height="23dp"/>

        </LinearLayout>


        <include
            android:id="@+id/loadingView"
            layout="@layout/infinite_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>