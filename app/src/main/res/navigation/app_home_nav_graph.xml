<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_home_graph"
    app:startDestination="@id/appHomeFragment">

    <activity
        android:id="@+id/homeActivity"
        android:name="com.janustech.helpsaap.ui.home.AppHomeActivity"
        android:label="Home"
        tools:layout="@layout/activity_app_home" />

    <fragment
        android:id="@+id/appHomeFragment"
        android:name="com.janustech.helpsaap.ui.home.AppHomeFragment"
        tools:layout="@layout/fragment_app_home">
        <action
            android:id="@+id/action_appHomeFragment_to_dealOfDayFragment"
            app:destination="@id/dealOfDayFragment">
        </action>
        <action
            android:id="@+id/action_appHomeFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment">
        </action>
        <action
            android:id="@+id/action_appHomeFragment_to_advertiseFragment"
            app:destination="@id/advertiseFragment">
        </action>
        <action
            android:id="@+id/action_appHomeFragment_to_postedAdsFragment"
            app:destination="@id/postedAdsFragment">
        </action>

    </fragment>

    <fragment
        android:id="@+id/dealOfDayFragment"
        android:name="com.janustech.helpsaap.ui.home.FragmentDealOfDay"
        tools:layout="@layout/fragment_deal_of_day">

    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.janustech.helpsaap.ui.home.FragmentEditProfile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_tncFragment"
            app:destination="@id/tncFragment">
        </action>
        <action
            android:id="@+id/action_editProfileFragment_to_categoriesManagefragment"
            app:destination="@id/categoriesManagefragment">
        </action>

    </fragment>

    <fragment
        android:id="@+id/advertiseFragment"
        android:name="com.janustech.helpsaap.ui.home.FragmentAdvertisement"
        tools:layout="@layout/fragment_advertisement">

    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.janustech.helpsaap.ui.home.NotificationListFragment"
        tools:layout="@layout/fragment_notification">

    </fragment>

    <fragment
        android:id="@+id/postedAdsFragment"
        android:name="com.janustech.helpsaap.ui.home.PostedAdsListFragments"
        tools:layout="@layout/fragment_posted_ads_list">

    </fragment>

    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.janustech.helpsaap.ui.home.AboutUsFragment"
        tools:layout="@layout/fragment_about_us">

    </fragment>

    <fragment
        android:id="@+id/tncFragment"
        android:name="com.janustech.helpsaap.ui.home.TermsConditionsFragment"
        tools:layout="@layout/fragment_terms_conditions">

        <argument
            android:name="tnc"
            app:argType="string"
            android:defaultValue="" />

    </fragment>

    <fragment
        android:id="@+id/categoriesManagefragment"
        android:name="com.janustech.helpsaap.ui.home.CategoriesManageFragment"
        tools:layout="@layout/fragment_manage_categories">

    </fragment>


</navigation>